<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="/css/showdata.css">
</head>

<body>
    <%- include('./partials/boot.ejs'); %>
        <%- include('./partials/productHeader.ejs'); %>
            <div class="container text-center">
                <div class="row">

                    <h1 class="mt-2"><small>Products</small></h1>
                    <% for(let i=0; i < data.length; i++){ %>
                        <div class="col-sm-6">
                            <div class="card" style="width: 20rem;">
                                <img src="https://img.freepik.com/free-photo/colorful-empty-shopping-bags-purple-background_23-2148101561.jpg?w=740&t=st=1670162297~exp=1670162897~hmac=3c4e48e8e970b044340dcb3970235683b533345126c3e3439bd5f2ac1f3e43d2"
                                    class="card-img-top" alt="error">
                                <div class="card-body">
                                    <h5 class="card-title">Name : <%= data[i].pname %>
                                    </h5>
                                    <h5 class="card-title">Price : <%= data[i].price %>
                                    </h5>
                                    <h5 class="card-title">Quantity : <%= data[i].quantity %>
                                    </h5>
                                    <!-- <a class="btn btn-info" href=`/update/<%= data[i].id %>` >Edit</a>
                                    <a class="mt-1 btn btn-danger" href=`/delete/<%= data[i].id %>`>Delete</a> -->
                                   
                                    <!-- <form action=`/upload/<%= data[i]._id %>` method="post">
                                        <button type="submit" class="btn btn-info">Edit</button>
                                    </form> -->
                                    <form action="/product/update/<%= data[i]._id %>" method="post">
                                        <button type="submit" class="mt-2 btn btn-info">Edit</button>
                                    </form>
                                    <form action="/product/delete/<%= data[i]._id %>" method="post">
                                        <button type="submit" class="mt-2 btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>

            </div>
</body>

</html>